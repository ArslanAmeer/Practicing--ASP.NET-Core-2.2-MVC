@model IEnumerable<GraniteHouse.Models.ProductType>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-6 text-info">
        <h1>Product Type</h1>
    </div>
    <div class="col-6 text-right">
        <a asp-action="CreateProductType" class="btn btn-info mt-2">+New Product Type</a>
    </div>
</div>
<hr />
<table class="table table-striped table-sm">
    <thead class="table-dark text-center">
        <tr>
            <td><b>@Html.DisplayNameFor(m => m.Name)</b></td>
            <td><b>Actions</b></td>
        </tr>
    </thead>

    @if (Model.Any())
    {
        <tbody class="text-center">
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Name</td>
                    <partial name="_TableButtonsPartial" model="@p.Id" />
                    @*<td><a class="btn btn-danger btn-sm" asp-action="" asp-route-id="@p.Id">Delete</a></td>*@
                </tr>
            }
        </tbody>
    }
    else
    {
        <tbody class="text-center">
            <tr><td>List Not Available</td><td></td></tr>
        </tbody>
    }
</table>
